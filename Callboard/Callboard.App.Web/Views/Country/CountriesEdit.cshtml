@Scripts.Render("~/countries-edit")

<div class="card">
    <div class="card-content">
        <span class="card-title">Countries</span>
        <div class="row valign-wrapper">
            <div class="input-field col s7">
                <input id="new-country-name" type="text" class="validate" placeholder="New country name...">
                <label for="new-country-name" class="active">Country</label>
            </div>

            <div class="row col s5 right-align">
                <a onclick="saveCountry('new-country-name', 'country-edit-list')" class="btn-floating waves-effect waves-light btn-middle green">
                    <i class="material-icons">add</i>
                </a>
            </div>
        </div>
    </div>

    <div class="card-action medium vertical-overflow">
        <div id="country-edit-list">
            @{ Html.RenderAction("GetCountryEditList", "Country"); }
        </div>
    </div>
</div>