@model NavViewModel

<div class="navs">
    @foreach (var item in Model.Categories)
    {
        <div class="navs__item_vertical navs__item_light_underline">
            @Html.ActionLink(item.Name, "GetCategoryAds", "Ad",
                           routeValues: new { categoryId = item.Id },
                           htmlAttributes: new { @class = "link link_block link_gap_1 link_red" })

            @foreach (var subcat in item.Subcategories)
            {
                <span>SubCategory: </span>@Html.ActionLink(subcat.Name, "GetCategoryAds", "Ad",
                          routeValues: new { categoryId = item.Id },
                          htmlAttributes: new { @class = "link link_block link_gap_1 link_red" })
                <span>EndSub</span>
            }
        </div>
    }
</div>