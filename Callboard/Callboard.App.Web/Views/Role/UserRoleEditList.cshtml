@model UserRoleEditViewModel

@Scripts.Render("~/roles-list")
<script>
    loadRolesOptions();
</script>

<div class="card">
    <div class="card-content">
        <span class="card-title">Roles</span>

        <div class="row valign-wrapper center">
            <div class="col s6">
                <select id="roles-select" class="block center"></select>
            </div>

            <div class="col s6">
                <a onclick="addRoleForUser(@Model.UserId)" class="width_100per waves-effect waves-light btn green">
                    <i class="material-icons left">add</i>Add
                </a>
            </div>
        </div>

        <div id="roles">
            @foreach (var role in Model.Roles)
            {
                <div id="user-@Model.UserId-role-@role.RoleId" class="row valign-wrapper center">
                    <div class="col s6">
                        @role.Name
                    </div>

                    <div class="col s6">
                        <a onclick="deleteUserRole(@Model.UserId, @role.RoleId, 'user-@Model.UserId-role-@role.RoleId')" class="width_100per waves-effect waves-light btn red">
                            <i class="material-icons left">delete</i>delete
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>