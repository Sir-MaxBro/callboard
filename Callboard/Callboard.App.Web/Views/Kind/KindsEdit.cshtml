@Scripts.Render("~/kinds-edit")

<div class="card">
    <div class="card-content">
        <span class="card-title">Kinds</span>
        <div class="row valign-wrapper">

            <div class="input-field col s7">
                <input id="new-kind-name" type="text" class="validate" placeholder="New kind name...">
                <label for="new-kind-name" class="active">Kind</label>
            </div>

            <div class="row col s5 right-align">
                <a onclick="saveKind('new-kind-name', 'kind-edit-list')" class="btn-floating waves-effect waves-light btn-middle green">
                    <i class="material-icons">add</i>
                </a>
            </div>

        </div>
    </div>

    <div class="card-action medium vertical-overflow">
        <div id="kind-edit-list">
            @{  Html.RenderAction("GetKindsEditList", "Kind"); }
        </div>
    </div>
</div>