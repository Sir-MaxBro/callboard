@Scripts.Render("~/editor")
<script>
    window.onload = function () {
        loadKinds('kinds');
        loadStates('states');
    }
</script>

<div class="row">
    <div class="col s12">
        <div class="card">
            <div class="card-content">
                <div class="row">
                    <div id="kinds">

                    </div>
                    <div class="center">
                        <button class="btn waves-effect waves-light green" type="button" onclick="addKind('kinds')">
                            Add kind
                            <i class="material-icons left">add</i>
                        </button>
                    </div>
                </div>

                <div class="row">
                    <div id="states">

                    </div>
                    <div class="center">
                        <button class="btn waves-effect waves-light green" type="button" onclick="addState('states')">
                            Add state
                            <i class="material-icons left">add</i>
                        </button>
                    </div>
                </div>

                <div class="row card">
                    <div class="card-content">
                        <span class="card-title">Categories</span>
                        <div id="categories">
                            @{ Html.RenderAction("GetEditCategories", "Category"); }
                        </div>
                    </div>
                    <div class="card-action">
                        <button class="btn waves-effect waves-light green" type="button" onclick="createCategory('categories')">
                            Add category
                            <i class="material-icons left">add</i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>