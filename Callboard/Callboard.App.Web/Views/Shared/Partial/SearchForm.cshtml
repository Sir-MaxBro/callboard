@using (Html.BeginForm("SearchAdsByName", "Search", FormMethod.Post, new { @class = "search-form search-form_center" }))
{
    <div class="search-form__box">
        <input type="text" name="name" class="browser-default search-form__textbox" placeholder="Search product..." />
