@model LoginViewModel

@using (Html.BeginForm("Login", "Account", new { returnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
{
    <div>
        @Html.EditorFor(x => x.Login)
    </div>

    <div>
        @Html.EditorFor(x => x.Password)
    </div>
    <div>
        <input type="submit" value="Sing in" class="button" />
    </div>
}
