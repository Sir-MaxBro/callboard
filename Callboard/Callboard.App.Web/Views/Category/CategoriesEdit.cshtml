@Scripts.Render("~/categories-edit")

<div class="card">
    <div class="card-content">
        <span class="card-title">Categories</span>
        <div class="row valign-wrapper">

            <div class="input-field col s11">
                <input id="new-category-name" type="text" class="validate" placeholder="New category name...">
                <label for="new-category-name" class="active">Category</label>
            </div>

            <div class="col s1 right-align">
                <a onclick="saveCategory('new-category-name', 'category-edit-list')" class="btn-floating waves-effect waves-light btn-middle green">
                    <i class="material-icons">add</i>
                </a>
            </div>

        </div>
    </div>

    <div class="card-action vertical-overflow">
        <div id="category-edit-list">
            @{ Html.RenderAction("GetCategoryEditList", "Category"); }
        </div>
    </div>
</div>