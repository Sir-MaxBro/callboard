@Scripts.Render("~/areas-edit")

<div class="card">
    <div class="card-content">
        <span class="card-title">Areas</span>
        <div class="row valign-wrapper">
            <div class="input-field col s7">
                <input id="new-area-name" type="text" class="validate" placeholder="New area name...">
                <label for="new-area-name" class="active">Area</label>
            </div>

            <div class="row col s5 right-align">
                <input id="country-id" type="hidden" />
                <a onclick="saveArea('country-id', 'new-area-name', 'area-edit-list')" class="btn-floating waves-effect waves-light btn-middle green">
                    <i class="material-icons">add</i>
                </a>
            </div>
        </div>
    </div>

    <div class="card-action medium vertical-overflow">
        <div id="area-edit-list"></div>
    </div>
</div>