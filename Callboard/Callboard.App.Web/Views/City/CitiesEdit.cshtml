@Scripts.Render("~/cities-edit")

<div class="card">
    <div class="card-content">
        <span class="card-title">Cities</span>
        <div class="row valign-wrapper">
            <div class="input-field col s7">
                <input id="new-city-name" type="text" class="validate" placeholder="New city name...">
                <label for="new-city-name" class="active">City</label>
            </div>

            <div class="row col s5 right-align">
                <input id="area-id" type="hidden" />
                <a onclick="saveCity('area-id', 'new-city-name', 'city-edit-list')" class="btn-floating waves-effect waves-light btn-middle green">
                    <i class="material-icons">add</i>
                </a>
            </div>
        </div>
    </div>

    <div class="card-action medium vertical-overflow">
        <div id="city-edit-list"></div>
    </div>
</div>